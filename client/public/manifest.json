  "shortcuts": [
    {
      "name": "Quick Pay",
      "short_name": "Pay",
      "description": "Make a payment quickly",
      "url": "/pay",
      "icons": [
        {
          "src": "/icon-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Swap Money",
      "short_name": "Swap",
      "description": "Swap with merchants or friends",
      "url": "/swap",
      "icons": [
        {
          "src": "/icon-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Plans",
      "short_name": "Plans",
