{
  "name": "AeonPay - Smart Group Payments",
  "short_name": "AeonPay",
  "description": "Comprehensive financial payment app with group spending management, campus merchants, and intelligent financial guardrails",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
